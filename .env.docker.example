# Docker Environment Configuration
# Copy this file to .env when using docker-compose
# These values override the defaults in docker-compose.yml

# Database Configuration
MYSQL_ROOT_PASSWORD=your_secure_root_password
MYSQL_DATABASE=ecommerce_db
MYSQL_USER=ecommerce_user
MYSQL_PASSWORD=your_secure_database_password

# Application Configuration
SECRET_KEY=your_very_long_random_secret_key_here
FLASK_ENV=development

# Admin Password (optional - will auto-generate if not set)
# ADMIN_PASSWORD=your_custom_admin_password

# Generate secure values:
# SECRET_KEY: python -c "import secrets; print(secrets.token_hex(32))"
# Random password: python -c "import secrets, string; print(''.join(secrets.choice(string.ascii_letters + string.digits + '!@#$%^&*') for i in range(16)))"
